{
    "mashling_schema": "1.0",
    "gateway": {
        "name": "rest to grpc gateway",
        "version": "1.0.0",
        "display_name":"rest to grpc gateway",
		"display_image":"displayImage.svg",
        "description": "This is a simple rest to grpc gateway server.",
        "triggers": [
            {
                "name": "MyProxy",
                "description": "Animals rest trigger - PUT animal details",
                "type": "github.com/TIBCOSoftware/mashling/ext/flogo/trigger/gorillamuxtrigger",
                "settings": {
                  "port": "9096"
                },
                "handlers": [
                  {
                    "dispatch": "PetStoreDispatch",
                    "settings": {
                      "autoIdReply": "false",
                      "method": "GET",
                      "path": "/pets/{grpcMethodName}/{id}",
                      "useReplyHandler": "false"
                    }
                  },
                  {
                    "dispatch": "PetStoreDispatch",
                    "settings": {
                      "autoIdReply": "false",
                      "method": "GET",
                      "path": "/users/{grpcMethodName}/{username}",
                      "useReplyHandler": "false"
                    }
                  },
                  {
                    "dispatch": "PetStoreDispatch",
                    "settings": {
                      "autoIdReply": "false",
                      "method": "PUT",
                      "path": "/pets/{grpcMethodName}",
                      "useReplyHandler": "false"
                    }
                  },
                  {
                    "dispatch": "PetStoreDispatch",
                    "settings": {
                      "autoIdReply": "false",
                      "method": "GET",
                      "path": "/users/{grpcMethodName}",
                      "useReplyHandler": "false"
                    }
                  }
                ]
            }
        ],
        "dispatches": [
            {
                "name": "PetStoreDispatch",
                "routes": [
                    {
                        "steps": [
                            {
                                "service": "PetStore",
                                "input": {
                                    "headers": "${payload.header}",
                                    "pathParams": "${payload.pathParams}",
                                    "methodName": "${payload.pathParams.grpcMethodName}",
                                    "queryParams": "${payload.queryParams}",
                                    "content": "${payload.content}"

                                }
                            }
                        ],
                        "responses": [
                            {
                                "if": "PetStore.response.body.error == 'true'",
                                "error": true,
                                "output": {
                                    "code": 404,
                                    "data": "${PetStore.response.body.details}"
                                }
                            },
                            {
                                "error": false,
                                "output": {
                                    "code": 200,
                                    "data": "${PetStore.response.body}"
                                }
                            }
                        ]
                    }
                ]
            }
        ],
        "services": [
            {
                "name": "PetStore",
                "description": "Make calls to PetStore grpc end point",
                "type": "grpc",
                "settings": {
                    "hosturl": "localhost:9000",
                    "protoName":"petstore",
                    "serviceName":"PetStoreService"                   
                }
            }
        ]
    }
}